{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "meeting": {
        "id": "/meeting",
        "title": "meeting",
        "description": "An meeting in the local community",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the meeting",
            "type": "string"
          },
          "allText": {
            "description": "Body text of the meeting",
            "type": "string"
          },
          "location": {
            "description": "location of the meeting",
            "type": "string"
          },
          "start_time": {
            "description": "start date and time of scheduled meeting",
            "type": "string",
            "format": "date-time"
          },
          "end_time": {
            "description": "end date and time of scheduled meeting",
            "type": "string",
            "format": "date-time"
          },
          "authorID": {
            "description": "User ID of the meeting author",
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
            "title",
            "allText",
            "location",
            "start_time",
            "end_time",
            "authorID"],
        "additionalProperties": false      
      }
    }
  }
  