{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {

      "announcement": {
        "$id": "#announcement",
        "title": "announcement",
        "description": "An announcement in the local community",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the announcement",
            "type": "string",
            "maxLength": 32
          },
          "allText": {
            "description": "Body text of the announcement",
            "type": "string"
          },
          "authorID": {
            "description": "User ID of the announcement author",
            "type": "integer",
            "minimum": 0
          },
          "dateCreated": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamo whe the announcement was created"
          },
          "dateModified":{
            "type": "string",
            "format": "date-time",
            "description": "The timestamo whe the announcement was last modified"
          }
        },
        "required": ["title", "allText", "authorID"],
        "additionalProperties": false      
      },
      

      "announcementUpdate": {
        "$id": "#announcementUpdate",
        "title": "announcement post Updated",
        "description": "Data that can be updated on annoucement post",
        "type": "object",
        "properties": {
          "title":{
            "type":"string",
            "description": "Main title of the announcement post",
            "maxLength": 32
          },
          "allText": {
            "description": "updated body text of the announcement",
            "type": "string"
          }
        },
        "additionalProperties": false     
      },
      "userList": {
        "$id": "#userList",
        "title": "User List",
        "description": "List of all users visible to admin only.",
        "type": "array",
        "items": {"$ref": "#/definitions/userView"}
      },
      
      
      "annoucementUpdated": {
        "$id": "#annoucementUpdated",
        "title": "User Updated",
        "description": "Confirmation of a successful user update/creation",
        "type": "object",
        "properties": {
          "ID": {
            "description": "ID of the updated user record",
            "type": "integer"
          },
          "updated": {
            "description": "Boolean indicator of success",
            "type": "boolean"
          },
          "link": {
            "description": "Path to retrieve user record",
            "type": "string",
            "format": "uri"
          }
        }
      },
      
      
      "userDeleted": {
        "$id": "#userDeleted",
        "title": "User Deleted",
        "description": "Confirmation of a successful deletion",
        "type": "object",
        "properties": {
          "ID": {
            "description": "ID of the updated user record",
            "type": "integer"
          },
          "deleted": {
            "description": "Boolean indicator of success",
            "type": "boolean"
          }
        }
      },

      "userNotFound":{
        "$id": "#userDeleted",
        "title": "User Deleted",
        "description": "Confirmation of a successful deletion",
        "type": "object",
        "properties": {
          "ID": {
            "description": "ID of the updated user record",
            "type": "integer"
            }

        }
      }
    }
  }
  