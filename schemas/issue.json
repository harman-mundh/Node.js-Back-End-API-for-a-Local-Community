{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "issue": {
        "id": "/issue",
        "title": "issue",
        "description": "An issue in the local community",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the issue",
            "type": "string"
          },
          "allText": {
            "description": "Body text of the issue",
            "type": "string"
          },
          "summary": {
            "description": "Optional short text summary of issue",
            "type": "string"
          },
          "imageURL": {
            "description": "URL for main image to show in issue",
            "type": "string",
            "format": "uri"
          },
          "published": {
            "description": "Is the issue published or not",
            "type": "boolean"
          },
          "authorID": {
            "description": "User ID of the issue author",
            "type": "integer",
            "minimum": 0
          }
        },
        "required": ["title", "allText", "authorID"],
        "additionalProperties": false      
      }
    }
  }
  